<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
             Title="{Binding Description}"
             x:Class="CarparkTracker.CarparkDetailPage">
    <ContentPage.Content>
        <StackLayout Margin="10">
            
            <Label Text="{Binding Name}" Style="{StaticResource DetailsLabelStyle}"/>
            
            <Label Text="{Binding Address}" Style="{StaticResource DetailsLabelStyle}"/>
            
            <Label Text="{Binding ContactDetails}" Style="{StaticResource DetailsLabelStyle}"/>

            <maps:Map x:Name="MyMap" VerticalOptions="StartAndExpand" BackgroundColor="Red"
                      HeightRequest="200" WidthRequest="320"
                      TranslationX="{Binding Coordinate.Longitude}"
                      TranslationY="{Binding Coordinate.Latitude}"
                      IsShowingUser="False"  
                      MapType="Street"
                      >
            </maps:Map>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>

